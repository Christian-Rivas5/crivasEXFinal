<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crivasEXFinal.Views.vAgregarDocumento"
             Title="vAgregarDocumento">
    <VerticalStackLayout>
        <Label x:Name="lblUsuario"
               HorizontalTextAlignment="End"
               FontSize="11"/>
        <StackLayout>
            <Button Text="Seleccionar Imagen" Clicked="OnSelectImageClicked"/>
            <Image x:Name="selectedImage" HeightRequest="200"/>
            <Button Text="Subir Imagen" Clicked="OnUploadImageClicked"/>
        </StackLayout>

        <Entry x:Name="txtSubirdoc"
               HorizontalTextAlignment="Center"
               Placeholder="ARRASTRE AQUÍ SU DOCUMENTO"/>

        <Button 
                x:Name="btnSubirDoc"
                Margin="0,20,0,0"
                BackgroundColor="Blue"
                HeightRequest="60"
                Text="Subir Documento"
                TextColor="#FBF6FD"
                Clicked="btnSubirDoc_Clicked"/>

        <Label x:Name="lblruta"
        HorizontalTextAlignment="End"
        FontSize="11"/>

    </VerticalStackLayout>
</ContentPage>